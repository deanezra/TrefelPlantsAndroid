<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/plantImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        android:textColor="@color/colorAccent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/detailsLinearLayout"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/plantImageView"
        app:layout_constraintEnd_toStartOf="@id/ivDialogClose">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsCommonNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/plant_details"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsScientificNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            tools:text="Scientific name here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            tools:text="Year" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsFamilyTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"

            android:textColor="@color/colorPrimary"
            tools:text="Family here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsBibliographyTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            tools:text="Bibliography here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            tools:text="Author here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            tools:text="Status here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsRankTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            tools:text="Rank here" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsGenusTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            tools:text="Genus here" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDialogClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/detailsLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>